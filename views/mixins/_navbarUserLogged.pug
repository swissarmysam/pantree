include _logo.pug
include _userDropdown.pug

mixin navbarUserLogged ()
    nav.navbar.is-fixed-top.is-primary(role='navigation', aria-label='main navigation')
        .navbar-brand
            a.nav__link.nav__link--logo.navbar-item(href="/")
                +logo(151, 32, '#ffffff')
        .navbar-menu
            .navbar-end
                each item in h.menu
                    a.nav__link.navbar-item(href=item.slug ) #{item.title}
                +userDropdown()

