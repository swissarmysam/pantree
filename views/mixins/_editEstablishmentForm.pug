include _workingHoursInput

mixin editEstablishmentForm()
    .columns.is-centered.is-vcentered.is-full-height
        .column.is-full-touch.is-three-quarters-desktop.is-three-fifths-widescreen
            .card
                .card-content
                    form.container.is-max-desktop.edit-form(action="/establishment/edit" method="POST")
                        .columns.is-vcentered.is-mobile
                            .column
                                h4.title.is-4 Display name
                            .column.is-narrow
                                button.button.is-link.enable-edit(type="button")
                                    span Edit
                                    span.icon.is-small
                                        ion-icon(src="/icons/edit.svg")
                        .field
                            .control
                                input.input.is-medium(type="text" value=account.establishmentName name='establishmentName' required disabled)
                        hr
                        h4.title.is-4 Opening times
                        .field.form-section(section-name="Set opening times" section="openingTimes")
                            +workingHoursInput('Monday', account.openingHours.mon.hours, false)
                            +workingHoursInput('Tuesday', account.openingHours.tues.hours, false)
                            +workingHoursInput('Wednesday', account.openingHours.weds.hours, false)
                            +workingHoursInput('Thursday', account.openingHours.thurs.hours, false)
                            +workingHoursInput('Friday', account.openingHours.fri.hours, false)
                            +workingHoursInput('Saturday', account.openingHours.sat.hours, false)
                            +workingHoursInput('Sunday', account.openingHours.sun.hours, false)
                        hr
                        .field
                            .control
                                button.button.is-medium.is-fullwidth.is-primary.submit(type="submit" disabled) Update